{{#partial "contenido-cliente"}}

<div class="container" style="overflow-y:auto; height:80%">
    <h4 style="padding-bottom: 15px; display:block">{{idCliente}} - {{nombreCliente}}</h4>
    <div style="display:inline-block">
        <div class="float-right">
            <a href="{{url_formulario_dispositivoNuevo}}" class="btn btn-info btn-sm" style="margin-bottom:10px; ">Agregar Dispositivo</a>
        </div>
        <div>
            <form>
                <label style="display:block">Buscar Mes especï¿½fico</label>
                <input type="month" name="periodo" value={{periodo}} required />
                <button class="btn btn-info btn-sm" style="margin-bottom:5px"> Consultar </button>
            </form>
        </div>

        <table style="width:100%" class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col" >Nombre Generico</th>
                    <th scope="col">Estado Actual</th>
                    <th scope="col">Horas de Uso</th>
                    <th scope="col">Consumo Por Hora</th>
                    <th scope="col">Consumo</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each dispositivos}}
                <tr>
                	<td>{{id}}</td>
                   	<td>{{nombreGenerico}}</td>
                	{{#with dispositivo}}
                    	{{#if estadoActual}}
							<td>{{estadoActual}}</td>
						{{else}}
                            <td>No aplica</td>
						{{/if}}
                	{{/with}}
                    <td>{{horasDeUso}}</td>
                    <td>{{consumoPorHora}}</td>
                    <td>{{consumo}}</td>
                    <td>
                        <a href="Editar Dispositivos">
                            <span class="fas fa-pencil-alt"></span>
                        </a>
                    </td>
                    <td>
                        <a href="Borrar dispositivo">
                            <span class="fa fa-trash"></span>
                        </a>
                    </td>
                </tr>
                {{/each}}
                <tr style="text-align:right">
                    <label>
                        Total de consumo: {{consumoTotal}} KWh
                    </label>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#dispositivos-tab').tab('show');
    });
</script>

{{/partial}}
